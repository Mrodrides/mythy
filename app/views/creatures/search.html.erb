<div class="container-fluid" style="margin-left: 0px, margin-right: 0px;">
  <div class="row">
    <div class="col-sm-12 col-md-8">
      <div class="container">
        <div class="row">
          <% @results.each do |result| %>
          <div class="col-sm-12 col-md-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path result.picture %>');">
            <!-- <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay"> -->
              <div class="card-description">
                <h2><%= result.name %></h2>
              </div>
              <%= link_to "", creature_path(result), class: "card-link" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-12 col-md-4">
      <h1>MAP</h1>
    </div>
  </div>
</div>


