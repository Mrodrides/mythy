<h1>Welcome to the home of Mythy!</h1>


<div class="search-bar">
  <h2> Search by name </h2>
  <%= form_tag(search_creatures_creatures_path, method: :get) do %>
  <%= text_field_tag :search, params[:name], placeholder: "Enter a creature name", class: "form-control" %>
  <div class="btn-search">
    <%= submit_tag 'Search' %>
  </div>
</div>
<% end %>
