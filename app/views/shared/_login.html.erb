<div class="modal custom fade" id="loginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title text-center">Mythy Login</h5>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" aria-label="Close">
          &times;
        </button>
      </div>

      <div class="modal-body">
        <%= simple_form_for :user, url: session_path(:user) do |f| %>
          <div class="form-group">
            <%= f.text_field :email, class: "form-control",placeholder: "Email", value:"" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, label: "Password", class: "form-control", placeholder:"Password", value:""%>
          </div>
          <div class="form-group">
          <%= f.submit 'Login', class: "form-control btn btn-primary" %>
          <%= f.check_box :remember_me, label: "Remember me", value: "true" %>
          <%= f.label :remember_me %>
          </div>
          <%= link_to "Sign up", new_registration_path(:user) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
